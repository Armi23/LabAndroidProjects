        <activity
            android:name="com.lab.olveczkylabsignatures.PresenterActivity"
            android:label="@string/title_activity_presenter" >
        </activity>
        <activity
            android:name="com.lab.olveczkylabsignatures.AnalysisActivity"
            android:label="@string/title_activity_analysis" >
        </activity>
        <activity
            android:name="com.lab.olveczkylabsignatures.PresentationActivity"
            android:label="@string/title_activity_presentation" >
